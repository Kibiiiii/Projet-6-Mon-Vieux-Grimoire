{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "linebreak-style": 0,
        "no-console": "off",
        "quotes": ["error", "single"],
        "comma-dangle": ["error", "always-multiline"],
        "operator-linebreak": ["error", "before"],
        "react/jsx-one-expression-per-line": ["off"],
        "react/jsx-curly-brace-presence": ["error", { "props": "never", "children": "never" }]
    }
}

